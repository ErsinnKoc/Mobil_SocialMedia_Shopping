<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/Linerlayout1">

        <TextView
            android:id="@+id/descriptionFA"
            android:layout_width="385dp"
            android:layout_height="wrap_content"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:text="sdgsaksı"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="italic" />

        <ImageView
            android:id="@+id/delateProduct"
            android:layout_width="21dp"
            android:layout_height="25dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/baseline_clear_24"
            app:menu="@menu/menu"></ImageView>





    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:layout_below="@+id/Linerlayout1"
        android:scaleType="centerCrop"
        android:id="@+id/imageView"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
            android:layout_below="@+id/imageView"
        android:id="@+id/linearLayout1"
        >

        <TextView
            android:id="@+id/productName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageView"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:text="saksı"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="italic" />



    </LinearLayout>
    <TextView
        android:id="@+id/price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linearLayout1"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:text="@string/price_suffix"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold" />


</RelativeLayout>